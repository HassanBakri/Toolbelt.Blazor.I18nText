@page "/"
@inject Toolbelt.Blazor.I18nText.I18nText I18nText
@using Lib4ProjRef
@using Lib4PackRef

<h1>@Text.HelloWorld</h1>

@Text.WelcomeToYourNewApp

<SurveyPrompt Title="@Text.SurveyTitle" />

<Lib4ProjRefComponent></Lib4ProjRefComponent>

<Lib4PackRefComponent></Lib4PackRefComponent>

@code {

    private Text Text = new Text();

    protected override async Task OnInitializedAsync()
    {
        Text = await I18nText.GetTextTableAsync<Text>(this);
    }
}